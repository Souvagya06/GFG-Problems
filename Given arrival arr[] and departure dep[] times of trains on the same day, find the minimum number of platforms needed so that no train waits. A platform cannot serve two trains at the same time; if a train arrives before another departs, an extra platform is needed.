class Solution:
    def minPlatform(self, arr, dep):
        # Sort arrival and departure times
        arr.sort()
        dep.sort()

        n = len(arr)
        i = 0
        j = 0
        platforms_needed = 0
        max_platforms = 0

        # Traverse through arrivals and departures
        while i < n and j < n:
            # If next train arrives before current departs → need platform
            if arr[i] <= dep[j]:
                platforms_needed += 1
                i += 1

                # Update result
                max_platforms = max(max_platforms, platforms_needed)
            else:
                # Train has departed → free platform
                platforms_needed -= 1
                j += 1
        
        return max_platforms

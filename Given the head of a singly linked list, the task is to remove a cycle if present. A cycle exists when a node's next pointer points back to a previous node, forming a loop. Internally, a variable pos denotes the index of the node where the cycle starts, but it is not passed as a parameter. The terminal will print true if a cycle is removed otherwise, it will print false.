class Solution:
    def removeLoop(self, head):
        if not head or not head.next:
            return
        
        slow = head
        fast = head
        
        # Step 1: Detect loop
        while fast and fast.next:
            slow = slow.next
            fast = fast.next.next
            if slow == fast:
                break
        
        # No loop
        if slow != fast:
            return
        
        # Step 2: Remove loop
        slow = head
        
        # Case 1: Loop starts at head
        if slow == fast:
            while fast.next != slow:
                fast = fast.next
            fast.next = None
            return
        
        # Case 2: Loop does not start at head
        prev = None
        while slow != fast:
            prev = fast
            slow = slow.next
            fast = fast.next
        
        prev.next = None

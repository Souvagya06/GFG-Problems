class Solution:
    def getMinDiff(self, arr, k):
        n = len(arr)
        if n == 1:
            return 0
        
        arr.sort()
        
        # Initial answer
        ans = arr[-1] - arr[0]
        
        # Initial smallest and largest
        smallest = arr[0] + k
        largest = arr[-1] - k
        
        for i in range(1, n):
            min_val = min(smallest, arr[i] - k)
            max_val = max(largest, arr[i - 1] + k)
            
            # Heights cannot be negative
            if min_val < 0:
                continue
            
            ans = min(ans, max_val - min_val)
        
        return ans

class Solution:
    def areAnagrams(self, s1, s2):
        # If lengths differ, impossible to be anagrams
        if len(s1) != len(s2):
            return False
        
        # Count characters in both strings
        count1 = {}
        count2 = {}
        
        for ch in s1:
            count1[ch] = count1.get(ch, 0) + 1
        
        for ch in s2:
            count2[ch] = count2.get(ch, 0) + 1
        
        # Compare frequency maps
        return count1 == count2
